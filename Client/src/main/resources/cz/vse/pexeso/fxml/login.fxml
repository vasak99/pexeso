<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="750.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.pexeso.controller.LoginController">
    <Label text="Username:">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="usernameField" maxWidth="300.0" minHeight="30.0" />
    <Label text="Password:">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <PasswordField fx:id="passwordField" maxWidth="300.0" minHeight="30.0" />
    <Button mnemonicParsing="false" onMouseClicked="#handleLoginClick" text="Login">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <font>
            <Font size="18.0" />
        </font>
    </Button>
    <Label fx:id="warningLabel" textFill="RED">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <font>
            <Font size="18.0" />
        </font>
    </Label>
</VBox>
